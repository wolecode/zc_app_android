        app:title="@string/storage_n_data" />

    <Preference
        app:fragment="com.zurichat.app.ui.settings.SettingsActivity$NotificationAndSounds"
        app:icon="@drawable/ic_alarm"
        app:key="notification_header"
        app:title="@string/notice_n_sounds" />

    <Preference
        app:fragment="com.zurichat.app.ui.settings.SettingsActivity$LanguagesFragment"
        app:icon="@drawable/ic_baseline_translate"
