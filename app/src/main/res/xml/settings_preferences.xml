<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:fragment="com.zurichat.app.ui.settings.fragments.ChatFragment"
        app:icon="@drawable/ic_chat"
        app:key="chat_header"
        app:title="@string/chat_setting"
        />

    <Preference
        app:fragment="com.zurichat.app.ui.settings.SettingsActivity$PrivacyAndSecurityFragment"
        app:icon="@drawable/ic_lock"
        app:key="security_header"
        app:title="@string/privacy" />

    <Preference
        app:fragment="com.zurichat.app.ui.settings.SettingsActivity$StorageAndDataFragment"
        app:icon="@drawable/ic_folder"
